<textarea id="{{ id }}" name="{{ name }}">{{ value|e('html') }}</textarea>

{% includejsresource 'tinymce/tinymce.min.js' %}
{% includejsfile configUrl %}
{% includejs %}
	tinymce.init(jQuery.extend(tinymce.config || {}, {
		selector: '#fields-{{ id|e('js') }}',
		language: '{{ language|e('js') }}',
		directionality: '{{ direction|e('js') }}'
	}))
{% endincludejs %}
